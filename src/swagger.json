{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Todolist API",
    "description": "API developed as a test for the backend developer position at Crosoften"
  },
  "host": "api.example.com",
  "basePath": "/v1",
  "schemes": ["https"],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/user": {
      "post": {
        "summary": "Register a new user",
        "description": "Creates a new user with the provided information",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "User object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Authenticate user",
        "description": "Authenticates a user with the provided credentials",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "description": "User credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Credentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User authenticated"
          }
        }
      }
    },
    "/task": {
      "post": {
        "summary": "Create a new task",
        "description": "Creates a new task with the provided information",
        "parameters": [
          {
            "in": "body",
            "name": "task",
            "description": "Task object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Task created"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "get": {
        "summary": "Get task by status",
        "description": "Returns a task by its status",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Status of the task",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A task",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Delete a task",
        "description": "Deletes a task by ID",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "ID of the task to be deleted",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "taskId": {
                  "type": "string",
                  "example": "12345"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Task deleted"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "summary": "Update an existing task",
        "description": "Updates a task with the provided information",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Task object that needs to be updated",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "taskId": {
                  "type": "string",
                  "example": "12345"
                },
                "title": {
                  "type": "string",
                  "example": "Buy groceries"
                },
                "description": {
                  "type": "string",
                  "example": "Milk, Bread, Butter"
                },
                "status": {
                  "type": "boolean",
                  "example": true
                }
              },
              "required": ["taskId"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task updated",
            "schema": {
              "$ref": "#/definitions/TaskResponse"
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/tasks": {
      "get": {
        "summary": "Get all tasks",
        "description": "Returns a list of all tasks",
        "responses": {
          "200": {
            "description": "A list of tasks",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Task"
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "definitions": {
    "TaskResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "af378955-a740-44da-86c2-79e08b97ddc4"
        },
        "title": {
          "type": "string",
          "example": "Finalizar os controllers teste crosoften"
        },
        "description": {
          "type": "string",
          "nullable": true,
          "example": null
        },
        "status": {
          "type": "boolean",
          "example": true
        },
        "userId": {
          "type": "string",
          "example": "d0580241-b1a2-4f6d-b46c-057bbfc0a6b0"
        }
      }
    },
    "User": {
      "type": "object",
      "required": ["name", "email", "password"],
      "properties": {
        "name": {
          "type": "string",
          "example": "john_doe"
        },
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        }
      }
    },
    "Credentials": {
      "type": "object",
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "password123"
        }
      }
    },
    "Task": {
      "type": "object",
      "required": ["title", "status"],
      "properties": {
        "title": {
          "type": "string",
          "example": "Buy groceries"
        },
        "description": {
          "type": "string",
          "example": "Milk, Bread, Butter"
        },
        "status": {
          "type": "boolean",
          "example": false
        },
        "mainTaskId": {
          "type": "string",
          "example": "af378955-a740-44da-86c2-79e08b97ddc4"
        }
      }
    }
  }
}
